<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_seller_stock_warehouse_tree" model="ir.ui.view">
            <field name="name">stock.warehouse.view.tree</field>
            <field name="model">stock.warehouse</field>
            <field name="arch" type="xml">
                <tree string="Sellers Warehouse" create="0" edit="0" delete="0">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="seller_id" />
                    <field name="active" invisible="1"/>
                    <field name="lot_stock_id" groups="stock.group_stock_multi_locations"/>
                    <field name="partner_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>
        <record id="view_seller_stock_warehouse_form" model="ir.ui.view">
            <field name="name">stock.warehouse.view.form</field>
            <field name="model">stock.warehouse</field>
            <field name="arch" type="xml">
                <form string="Sellers Warehouse" create="0" edit="0" delete="0">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="code"/>
                                <field name="seller_id" />
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                <field name="partner_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="seller_stock_warehouse_action" model="ir.actions.act_window">
            <field name="name">Sellers Warehouse</field>
            <field name="res_model">stock.warehouse</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('seller_id','!=',False)]</field>
            <field name="help" type="html">
                <p>To Create New Seller's Stock Location</p>
            </field>
        </record>
        <record id="seller_stock_warehouse_action_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="seller_stock_warehouse_action"/>
            <field name="view_id" ref="view_seller_stock_warehouse_tree"/>
        </record>
        <record id="seller_stock_warehouse_view_action_form" model="ir.actions.act_window.view">
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="seller_stock_warehouse_action"/>
            <field name="view_id" ref="view_seller_stock_warehouse_form"/>
        </record>

        <menuitem
            id="menu_seller_warehouse"
            name="Warehouse"
            action="seller_stock_warehouse_action"
            parent="menu_seller_config"
            groups="seller_management.group_sellers_management_manager"
            sequence="20"/>

        <record id="view_seller_stock_location_tree" model="ir.ui.view">
            <field name="name">stock.location.view.tree</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <tree string="Sellers Stock Location"  create="0" edit="0" delete="0">
                    <field name="active" invisible="1"/>
                    <field name="seller_id" />
                    <field name="complete_name" string="Location"/>
                    <field name="usage"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>
        <record id="view_seller_stock_location_form" model="ir.ui.view">
            <field name="name">stock.location.view.tree</field>
            <field name="model">stock.location</field>
            <field name="arch" type="xml">
                <form string="Sellers Stock Location" create="0" edit="0" delete="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="Current Stock" class="oe_stat_button" icon="fa-cubes" name="392" type="action"/>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name"/></h1>
                    <label for="location_id" class="oe_edit_only"/>
                    <h2><field name="location_id" options="{'no_create': True}"/></h2>
                    <group>
                        <group string="Seller Information">
                            <field name="seller_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Additional Information" name="additional_info">
                            <field name="active" invisible="1"/>
                            <field name="usage"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="scrap_location" attrs="{'invisible': [('usage', 'not in', ('inventory', 'internal'))]}"/>
                            <field name="return_location"/>
                        </group>
                    </group>
                    <field name="comment" placeholder="External note..."/>
                </sheet>
            </form>
            </field>
        </record>
        <record id="seller_stock_location_action" model="ir.actions.act_window">
            <field name="name">Seller Stock Locations</field>
            <field name="res_model">stock.location</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('seller_id','!=',False)]</field>
            <field name="help" type="html">
                <p>To Create New Seller's Stock Location</p>
            </field>
        </record>
        <record id="seller_stock_location_action_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="seller_stock_location_action"/>
            <field name="view_id" ref="view_seller_stock_location_tree"/>
        </record>
        <record id="seller_stock_location_view_action_form" model="ir.actions.act_window.view">
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="seller_stock_location_action"/>
            <field name="view_id" ref="view_seller_stock_location_form"/>
        </record>

        <menuitem
            id="menu_seller_locations"
            name="Locations"
            action="seller_stock_location_action"
            parent="menu_seller_config"
            groups="seller_management.group_sellers_management_user"
            sequence="20"/>

        <record id="view_seller_stock_transfer_tree" model="ir.ui.view">
            <field name="name">stock.picking.view.tree</field>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <tree string="Sellers Stock Transfer" delete="0">
                    <field name="priority" optional="show" widget="priority" nolabel="1"/>
                    <field name="name" decoration-bf="1"/>
                    <field name="location_id" options="{'no_create': True}" string="From" groups="stock.group_stock_multi_locations" optional="show"/>
                    <field name="location_dest_id" options="{'no_create': True}" string="To" groups="stock.group_stock_multi_locations" optional="show"/>
                    <field name="seller_id" />
                    <field name="partner_id" optional="show"/>
                    <field name="scheduled_date" optional="show" widget="remaining_days" attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="date_deadline" optional="hide" widget="remaining_days" attrs="{'invisible':[('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="origin" optional="show"/>
                    <field name="group_id" invisible="1"/>
                    <field name="backorder_id" optional="hide"/>
                    <field name="picking_type_id" optional="hide"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                    <field name="state" optional="show" widget="badge" decoration-success="state == 'done'" decoration-info="state not in ('done', 'cancel')"/>
                </tree>
            </field>
        </record>

        <record id="view_seller_stock_transfer_form" model="ir.ui.view">
            <field name="name">stock.picking.view.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_chatter')]" position="replace"/>
            </field>
        </record>

        <record id="seller_stock_transfer_action" model="ir.actions.act_window">
            <field name="name">Delivery Order</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('seller_id','!=',False)]</field>
            <field name="help" type="html">
                <p>To Create New Seller's Stock Transfers</p>
            </field>
        </record>
        <record id="seller_stock_transfer_action_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="seller_stock_transfer_action"/>
            <field name="view_id" ref="view_seller_stock_transfer_tree"/>
        </record>
        <record id="seller_stock_transfer_view_action_form" model="ir.actions.act_window.view">
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="seller_stock_transfer_action"/>
            <field name="view_id" ref="view_seller_stock_transfer_form"/>
        </record>
        
        <menuitem
            id="menu_seller_delivery_order"
            name="Delivery Orders"
            action="seller_stock_transfer_action"
            parent="seller_root_menu"
            groups="seller_management.group_sellers_management_user"
            sequence="40"/>
    </data>
</odoo>