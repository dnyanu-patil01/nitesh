    </record>

    <record id="view_product_form_inherit" model="ir.ui.view">
        <field name="name">product.product.view.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="before">
                <field name="seller_id" domain="[('seller','=',True),('parent_id','=',False)]" />
            </xpath>
        </field>
    </record>

    <record id="view_product_varients_form_inherit" model="ir.ui.view">
        <field name="name">product.product.view.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="before">
                <field name="seller_id" domain="[('seller','=',True),('parent_id','=',False)]" />
            </xpath>
        </field>
    </record>
    <!-- Added To Make HSN Code Mandatory -->
    <record id="product_template_hsn_code_inherit_l10n_in" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="l10n_in.product_template_hsn_code"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_in_hsn_code']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_seller_sale_product_template_tree" model="ir.ui.view">
        <field name="name">product.template.seller.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="seller_id" />
            </field>
        </field>
    </record>
    
    <record id="seller_product_view_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('seller_id','!=',False),('active','=',True)]</field>
        <field name="help" type="html">
            <p>To Create New Seller Products</p>
        </field>
    </record>
    <record id="seller_product_view_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="seller_product_view_action"/>
        <field name="view_id" ref="view_sellers_product_template_tree"/>
    </record>
    <record id="seller_product_view_action_view_form" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="seller_product_view_action"/>
        <field name="view_id" ref="view_seller_product_template_form"/>
    </record>
    
    <menuitem
        id="menu_seller_product"
        name="Products"
        action="seller_product_view_action"
        parent="seller_root_menu"
        groups="seller_management.group_sellers_management_user"
        sequence="30"/>
        
        <record id="product_template_search_view" model="ir.ui.view">
            <field name="name">product.template.search.pos.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="seller_id" />
                </field>
                <xpath expr="//search/group/filter[@name='type']" position="after">
                    <filter string="Seller" name="group_by_seller_id" domain="[]" context="{'group_by':'seller_id'}"/>
                </xpath>
                <filter name="services" position="before">
                    <filter string="Seller Products"
                                name="seller_products"
                                domain="[('seller_id', '!=', False)]"/>
                </filter>
            </field>
        </record>
    
</odoo>
