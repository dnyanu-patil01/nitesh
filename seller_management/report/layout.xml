<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- External layouts styles -->
    <template id="external_layout_common_header">
        <!-- Header for the HSN based invoice report -->
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <!-- o_boxed_header is added to get boxed layout changed later if you want to any other layout -->
            <div class="o_boxed_header">
                <div class="row">
                    <div class="col-4 mb5">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 100px;" alt="Logo"/>
                    </div>
                </div>
            </div>
        </div>
        <!-- o_report_layout_boxed is added to get boxed layout changed later if you want to any other layout -->
        <div t-attf-class="article o_report_layout_boxed o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>
<!-- Footer Report -->
        <!-- o_boxed_footer is added to get boxed layout changed later if you want to any other layout -->
        <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout" style= "border-top: 1px solid black;font-size:13px;height:15px;">
            <div class="text-center">
                <ul class="list-inline">
                    <li t-if="company.phone" class="list-inline-item"><span class="o_force_ltr" t-field="company.phone"/></li>
                    <li t-if="company.email" class="list-inline-item"><span t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item"><span t-field="company.website"/></li>
                </ul>
                <div t-field="company.report_footer"/>
                <div t-if="report_type == 'pdf'">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>
</odoo>
