<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="seller_action_order_report_all" model="ir.actions.act_window">
        <field name="name">Sellers Sales Analysis</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_id"/>  <!-- force empty -->
        <field name="search_view_id" ref="seller_management.seller_view_order_product_search"/>
        <field name="context">{'search_default_Sales':1,
            'search_default_groupby_seller_id':
            1, 'group_by_no_leaf':1,'group_by':[]}
        </field>
        <field name="domain">[('seller_id','!=',False)]</field>
        <field name="help">This report performs analysis on your quotations and sales orders.
            Analysis check your sales revenues and sort it by different group criteria (salesman,
            partner, product, etc.) Use this report to perform analysis on sales not having invoiced
            yet. If you want to analyse your turnover, you should use the Invoice Analysis report in
            the Accounting application.
        </field>
    </record>

    <record id="action_seller_order_report_all" model="ir.actions.server">
        <field name="name">Seller Sale Report</field>
        <field name="model_id" ref="sale.model_sale_report"/>
        <field name="state">code</field>
        <field name="code">action = env.get('sale.report').seller_sale_report()</field>
    </record>

    <menuitem
        id="seller_report_root_menu"
        name="Reporting"
        parent="seller_root_menu"
        groups="seller_management.group_sellers_management_manager"
        sequence="50"/>
    
    <menuitem
        id="menu_seller_sales_report"
        name="Seller"
        action="action_seller_order_report_all"
        parent="seller_report_root_menu"
        sequence="10"/>

</odoo>
