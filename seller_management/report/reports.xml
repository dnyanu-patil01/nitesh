<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<!--Seller Invoice Reports -->
        <report 
            string="Marketplace Invoices" 
            id="action_report_seller_invoice" 
            model="account.move" 
            report_type="qweb-pdf"
            name="seller_management.report_seller_invoice" 
            file="seller_management.report_seller_invoice"            
        />

        <!--Invoice report paper format -->
        <record id="paperformat_seller_invoice_report" model="report.paperformat">
            <field name="name">Custom invoice</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>


        <record id="seller_management.action_report_seller_invoice" model="ir.actions.report">
            <field name="paperformat_id" ref="seller_management.paperformat_seller_invoice_report" />
            <field name="print_report_name">(object._get_report_base_filename())</field>
        </record>

    </data>
</odoo>
