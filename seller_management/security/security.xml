            <field name="name">Seller Personal Stock Inventory</field>
            <field ref="stock.model_stock_inventory" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
        </record> -->
        <record id="seller_product_packaging_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Product Package</field>
            <field ref="product.model_product_packaging" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4,ref('seller_management.group_sellers_management_user'))]" />
        </record>
        <!-- Sellers Manager Rules To See All Sellers Records -->
        <record id="seller_account_move_all_rule" model="ir.rule">
            <field name="name">Seller All Invoices</field>
            <field ref="account.model_account_move" name="model_id" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_manager'))]" />
        </record>
        <record id="seller_account_items_all_rule" model="ir.rule">
