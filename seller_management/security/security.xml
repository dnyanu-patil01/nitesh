<?xml version="1.0" encoding="utf-8"?>

<odoo>
<data noupdate="1">
    <record model="res.groups" id="group_product_approval">
        <field name="name">Product Approval</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

        <record model="ir.module.category" id="module_seller_management">
            <field name="name">Sellers</field>
            <field name="description">Sellers Access Right</field>
            <field name="sequence">100</field>
        </record>

        <record model="res.groups" id="group_sellers_management_user">
            <field name="name">User</field>
            <field name="category_id" ref="module_seller_management"/>
            <field name="implied_ids"
                   eval="[(4,ref('sales_team.group_sale_salesman')),(4,ref('stock.group_stock_manager')),(4,ref('account.group_account_invoice'))]"/>
        </record>

        <record model="res.groups" id="group_sellers_management_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_seller_management"/>
            <field name="implied_ids"
                   eval="[(4,ref('seller_management.group_sellers_management_user')),(4,ref('stock.group_stock_manager')),(4,ref('sales_team.group_sale_manager')),(4,ref('account.group_account_manager'))]"/>
        </record>
</data>
</odoo>
