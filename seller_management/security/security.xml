<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Product Approval Group -->
        <record model="res.groups" id="group_product_approval">
            <field name="name">Product Approval</field>
            <field name="category_id" ref="base.module_category_hidden" />
        </record>
        <!-- Seller Categories -->
        <record model="ir.module.category" id="module_seller_management">
            <field name="name">Sellers</field>
            <field name="description">Sellers Access Right</field>
            <field name="sequence">100</field>
        </record>
        <!-- Seller User -->
        <record model="res.groups" id="group_sellers_management_user">
            <field name="name">User</field>
            <field name="category_id" ref="module_seller_management" />
        </record>
        <!-- Seller Manager -->
        <record model="res.groups" id="group_sellers_management_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_seller_management" />
            <field name="implied_ids" eval="[(4, ref('seller_management.group_sellers_management_user'))]"/>
            <field name="users"
                   eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
        </record>
        <!-- Inactive Base Private Address Rule:To Display Seller Own Record For Seller User Group -->
        <!-- To Handle User To See His Own Contacts -->
        <record model="ir.module.category" id="module_contact_access">
            <field name="name">Contact Access</field>
            <field name="description">Contact Access Right</field>
            <field name="sequence">105</field>
        </record>

        <record model="res.groups" id="group_own_contact_only">
            <field name="name">Access Own Contact</field>
            <field name="category_id" ref="seller_management.module_contact_access" />
        </record>
        
        <record model="res.groups" id="group_all_contacts">
            <field name="name">Access All Contact</field>
            <field name="category_id" ref="seller_management.module_contact_access" />
            <field name="users"
                   eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
        </record>
       
        <record id="base.res_partner_rule_private_employee" model="ir.rule">
            <field name="groups" eval="[(6, 0, [ref('seller_management.group_all_contacts')])]" />
        </record>
        <!-- All Journal Entries - Invoice Billing Admin -->
        <record id="account.account_move_see_all" model="ir.rule">
            <field name="groups" eval="[(6, 0, [ref('account.group_account_manager')])]" />
        </record>
        <!-- Readonly Move -Invoice Billing Admin	 -->
        <record id="account.account_move_rule_group_invoice" model="ir.rule">
            <field name="groups" eval="[(6, 0, [ref('account.group_account_manager')])]" />
        </record>
        <!-- All Journal Items - Invoice Billing Admin	 -->
        <record id="account.account_move_line_see_all" model="ir.rule">
            <field name="groups" eval="[(6, 0, [ref('account.group_account_manager')])]" />
        </record>
        <!-- Readonly Move Line - Invoice Billing Admin	 -->
        <record id="account.account_move_line_rule_group_invoice" model="ir.rule">
            <field name="groups" eval="[(6, 0, [ref('account.group_account_manager')])]" />
        </record>
        <!-- Seller User Group Rules -->
        <record id="seller_account_move_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Invoices</field>
            <field ref="account.model_account_move" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id),('move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]</field>
            <field name="groups" eval="[(4,ref('seller_management.group_sellers_management_user')),(4,ref('account.group_account_invoice'))]" />
        </record>
        <record id="seller_account_items_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Invoices Lines</field>
            <field ref="account.model_account_move_line" name="model_id" />
            <field name="domain_force">[('move_id.seller_id','=',user.partner_id.id),('move_id.move_type', 'in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]</field>
            <field name="groups" eval="[(4,ref('seller_management.group_sellers_management_user')),(4,ref('account.group_account_invoice'))]" />
        </record>
        <record id="seller_account_move_paymentpersonal_rule" model="ir.rule">
            <field name="name">Seller Personal Payment Move</field>
            <field ref="account.model_account_move" name="model_id" />
            <field name="domain_force">[('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]</field>
            <field name="groups" eval="[(4,ref('seller_management.group_sellers_management_user')),(4,ref('account.group_account_invoice'))]" />
        </record>
        <record id="seller_account_move_items_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Payment Move Lines</field>
            <field ref="account.model_account_move_line" name="model_id" />
            <field name="domain_force">[('move_id.move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]</field>
            <field name="groups" eval="[(4,ref('seller_management.group_sellers_management_user')),(4,ref('account.group_account_invoice'))]" />
        </record>
        <record id="seller_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Rule</field>
            <field ref="base.model_res_partner" name="model_id" />
            <field name="domain_force">['|','|',('id','=',user.partner_id.id),('parent_id','=',user.partner_id.id),('seller','=',False)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
        </record>
        <record id="seller_order_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Sale Orders</field>
            <field ref="sale.model_sale_order" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
        </record>
        <record id="seller_order_line_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Sale Orders Lines</field>
            <field ref="sale.model_sale_order_line" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
        </record>
        <record id="seller_product_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Products</field>
            <field ref="product.model_product_product" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
