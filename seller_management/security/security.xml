        <record id="seller_product_template_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Products Template</field>
            <field ref="product.model_product_template" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
        </record>
        <record id="seller_stock_transfer_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Transfers</field>
            <field ref="stock.model_stock_picking" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
        </record>
        <record id="seller_stock_move_personal_rule" model="ir.rule">
            <field name="name">Seller Personal Stock Moves</field>
            <field ref="stock.model_stock_move" name="model_id" />
            <field name="domain_force">[('seller_id','=',user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('seller_management.group_sellers_management_user'))]" />
        </record>
