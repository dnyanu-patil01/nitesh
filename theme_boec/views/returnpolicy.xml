<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="returnpolicy_boec" model="ir.ui.view">
            <field name="name">Return Policy</field>
            <field name="type">qweb</field>
            <field name="key">theme_boec.about_boec</field>
            <field name="arch" type="xml">
                <t name="Return Policy" t-name="theme_boec.about_boec">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <Section class="banner_sub">
                                <div class="wrapper">
                                    <div class="container">
                                        <div class="row">
                                            <div class="sub_page">
                                                <div class="name">Return Policy</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </Section>
                            <!-- Refund Policy section ends here -->
                            <section class="returnpolicy">
                                <div class="container">
                                    <div class="about_bottom">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-6 col-12">
                                                <div class="about_details">
                                                    <p>We accept returns / exchange of faulty products within 10 days of delivery.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="returnpolicy_boec_page" model="website.page">
            <field name="url">/returnpolicy</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="returnpolicy_boec" />
            <field name="track">True</field>
        </record>
        <record id="menu_returnpolicy_boec" model="website.menu">
            <field name="name">Return Policy</field>
            <field name="url">/returnpolicy</field>
            <field name="page_id" ref="theme_boec.returnpolicy_boec_page" />
            <field name="parent_id" ref="website.main_menu" />
            <field name="sequence" type="int">50</field>
        </record>
    </data>
</odoo>