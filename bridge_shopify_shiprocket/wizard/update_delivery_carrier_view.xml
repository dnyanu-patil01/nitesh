<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_update_delivery_carrier_form" model="ir.ui.view">
        <field name="name">update.delivery.carrier.form</field>
        <field name="model">update.delivery.carrier</field>
        <field name="arch" type="xml">
            <form>
                <p colspan="2" class="alert alert-info" role="alert">
                    <b>
                        <u>
                            <h3 style="font-weight:bold;color:#7d5a29">Important Note:</h3>
                        </u>

                        <ol>
                            <li>
                              To change delivery carrier state must be in <b> Done</b> 
                            </li>
                            <li>
                              To change delivery carrier from other carrier then shiprocket status must be <b>None or Cancelled</b>
                            </li>
                            <li>
                              Below Selected Delivery Carrier Will Be Updated In Selected Delivery Order
                            </li>
                        </ol>
                    </b>
                </p>
                <group>
                    <field name="carrier_id" required="1" options="{'no_create': True,'no_edit':True,'no_open':True}"/>
                    <field name="delivery_type" invisible="1" />
                    <field name="tracking_url" attrs="{'required':[('delivery_type','=','self')],'invisible':[('delivery_type','!=','self')]}" />
                    <field name="tracking_ref" attrs="{'required':[('delivery_type','=','self')],'invisible':[('delivery_type','!=','self')]}" />
                </group>
                <footer>
                    <button name="update_delivery_carrier" string="Change Delivery Carrier" type="object" default_focus="1" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>
</odoo>