<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="sale_workflow_process_view_form_inherit" model="ir.ui.view">
      <field name="name">sale.workflow.process.ept.form.chatter</field>
      <field name="model">sale.workflow.process.ept</field>
      <field name="inherit_id" ref="common_connector_library.sale_workflow_process_view_form" />
      <field name="arch" type="xml">
         <!-- Added Chatter Log -->
         <xpath expr="//sheet" position="after">
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
			</xpath>
      </field>
   </record>
</odoo>