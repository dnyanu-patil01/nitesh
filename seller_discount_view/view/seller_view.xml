<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_seller_sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form - seller_sale_fixed_discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="seller_management.view_seller_sale_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/form//label[@for='discount']"
                position="before"
            >
                <field
                    name="discount_fixed"
                    groups="product.group_discount_per_so_line"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='discount']"
                position="before"
            >
                <field
                    name="discount_fixed"
                    groups="product.group_discount_per_so_line"
                />
            </xpath>
        </field>
    </record>

        <record id="view_move_seller_form" model="ir.ui.view">
        <field name="name">account.move.form - fixed_discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="seller_management.view_seller_invoice_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                position="before"
            >
                <field
                    name="discount_fixed"
                    optional="show"
                />
            </xpath>
            <xpath
                expr="//field[@name='invoice_line_ids']/form/sheet/group/field[@name='discount']"
                position="before"
            >
                <field name="discount_fixed" />
            </xpath>
        </field>
    </record>
</odoo>
