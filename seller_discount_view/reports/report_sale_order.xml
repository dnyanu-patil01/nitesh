<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_saleorder_seller_document"
        inherit_id="seller_management.report_seller_invoice_document"
    >
        <xpath expr="//t[@t-set='display_discount']" position="after">
            <t
                t-set="display_discount_fixed"
                t-value="any([l.discount_fixed for l in o.invoice_line_ids])"
            />
        </xpath>
        <th name="th_price_unit" position="after">
            <th
                t-if="display_discount_fixed"
                class="text-right"
                groups="product.group_discount_per_so_line"
            >
                <span>Disc. Amount</span>
            </th>
        </th>
        <xpath expr="//td[@t-if='display_discount']" position="after">
            <td
                t-if="display_discount_fixed"
                class="text-right"
                groups="product.group_discount_per_so_line"
            >
                <span t-field="line.discount_fixed" />
            </td>
        </xpath>
    </template>
</odoo>
