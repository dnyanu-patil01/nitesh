<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<!-- Kanha Family Form View  -->
	<record model="ir.ui.view"
		id="kanha_inherit_view_partner_form">
		<field name="name">kanha.inherit.view.partner.form</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="mode">primary</field>
		<field name="arch" type="xml">
			<xpath expr="//form" position="replace">
				<form string="Kanha Census">
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="email" />
								<field name="gender"/>
								<!-- <field name="application_type" /> -->
								<field name="voter_number"/>
								<field name="pan_card_number" />
								<field name="aadhaar_card_number"/>
								<field name="abhyasi_id" />
								<field name="residence_type" />
								
							</group>
							<group>
								<field name="surname" />
								<field name="mobile" />
								<field name="date_of_birth"/>
								<field name="citizenship" />
								<field name="passport_number" />
								<field name="members_count" />
								<field name="relative_aadhaar_card_number" />
								
							</group>
						</group>
						<notebook>
							<page string="Kanha Address" name="kanha_address" >
                        		<group>
		                            <group string="Kanha Address" name="kanha_address">
		                            	<field name="resident_of_kanha_from_date" />
		                                <field name="work_profile" />
		                                <field name="kanha_location_id" />
		                                <field name="kanha_house_number" />
		                            </group>
                        		</group>
                    		</page>
                    		<page string="Kanha Voter ID" name="kanha_voter_id_info" >
                    			<group>
		                            <group>
			                            <field name="birth_country_id" />
		                                <field name="birth_state_id" />
		                                <field name="birth_district" />
		                              	<field name="birth_town" />
		                              	<field name="change_voter_id_address" />
		                              	<field name="voter_number" />
		                            	<field name="relation_type" />
		                                <field name="relative_name" />
		                                <field name="relative_surname" />
                              		</group>
                              		<group>
		                              	<field name="already_have_kanha_voter_id" />
		                              	<field name="kanha_voter_id_number" />
		                              	<field name="kanha_voter_id_image" />
		                              	<field name="need_new_kanha_voter_id" />
		                              	<field name="application_type" />
		                              	<field name="declaration_form" />
		                              	<field name="existing_voter_id_number" />
		                              	<field name="voter_id_file" />
                                	</group>
                                </group>
                    		</page>
							<!-- <page string="Birth Place Info" name="birthplace" >
                        		<group>
		                            <group string="Birth Place Info" name="birthplace">
		                            	<field name="birth_country_id" />
		                                <field name="birth_state_id" />
		                                <field name="birth_district" />
		                              	<field name="birth_town" />
		                            </group>
                        		</group>
                    		</page>
                    		<page string="Relation Info" name="reation_info" >
                        		<group>
		                            <group string="Relation Info" name="reation_info">
		                            	<field name="relation_type" />
		                                <field name="relative_aadhaar_card_number" />
		                                <field name="relative_name" />
		                                <field name="relative_surname" />
		                            </group>
                        		</group>
                    		</page> -->
                    		
							<page string="Documents" name="documents" >
                        		<group>
		                            <group string="Documents" name="documents">
		                                <field name="adhar_card" />
		                                <field name="adhar_card_back_side" />
		                                <field name="passport_photo"/>
		                                <field name="address_proof" />
		                              	<field name="age_proof" />
		                              	<field name="age_declaration_form" />
		                            </group>
                        		</group>
                    		</page>
                    		<page string="Vehicle Details" name="vehicle_details" >
                    			<field name="vehicle_details_ids" colspan="4" nolabel="1">
	                            	<tree string="Vehicle Details">
	                               		<field name="vehicle_number" />
		                                <field name="vehicle_owner" />
		                                <field name="vehicle_type" />
		                              	<field name="additional_vehicle_number" />
	                            	</tree>
	                            	<form string="Vehicle Details">
		                                <group col="4">
		                                    <field name="vehicle_number" />
				                                <field name="vehicle_owner" />
				                                <field name="vehicle_type" />
				                              	<field name="additional_vehicle_number" />
		                                </group>
	                            	</form>
                        		</field>
                    		</page>
                    		<page string="Existing Voter ID Details" name="existing_voter_id_details" >
                        		<group>
		                            <group string="Existing Voter ID Details" name="existing_voter_id_details">
		                                <field name="existing_voter_id_number" />
		                                <field name="country_id"/>
		                                <field name="state_id" />
		                              	<field name="assembly_constituency" />
		                              	<field name="house_number" />
		                              	<field name="locality" />
		                         		<field name="town" />
		                             	<field name="post_office" />
		                            	<field name="zip" />
		                            </group>
                        		</group>
                    		</page>
                    		<page string="Family Members">
	                    		<field name="family_members_ids" widget="one2many_list">
	                    			<tree editable="bottom" string="Family Members">
		                                <field name="name" />
	                                </tree>
	                                <form>
	                             		<group>
			                                <field name="name" />
	                                  	</group>
	                               	 </form>
	                      		</field>
                   			</page>
						</notebook>
					</sheet>
				</form>
			</xpath>
		</field>
	</record>

	<!-- Kanha Family Tree View  -->
	<record id="kanha_iherit_view_partner_tree"
		model="ir.ui.view">
		<field name="name">res.partner.tree</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="mode">primary</field>
		<field name="arch" type="xml">
			<xpath expr="//form" position="replace">
				<tree string="Kanha Census" sample="1" multi_edit="1">
					<field name="name" />
					<field name="mobile" class="o_force_ltr" optional="show" />
					<field name="email" />
					<field name="gender" />
					<field name="date_of_birth" />
				</tree>
			</xpath>
		</field>
	</record>

	<!-- Kanha Patner Action  -->
	<record id="kanha_partner_action" model="ir.actions.act_window">
		<field name="name">Family</field>
		<field name="res_model">res.partner</field>
		<field name="view_mode">tree,form</field>
		<field name="view_ids"
			eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('kanha_iherit_view_partner_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('kanha_inherit_view_partner_form')})]" />
	</record>
	
	<!-- Menu item  -->
	<menuitem id="menu_kanha_partner"
          parent="kanha_census.menu_kanha_location_root" 
          action="kanha_partner_action"
          />
</odoo>
