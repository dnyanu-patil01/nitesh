##############################################################################
# views/res_partner_views.xml
##############################################################################
<odoo>
    <record id="view_res_partner_idcard_form" model="ir.ui.view">
        <field name="name">res.partner.idcard.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="ID Card Printing">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="id_card_number"/>
                    </group>
                    <footer>
                        <button string="Print ID Card" type="object" name="action_print_id_card" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_res_partner_idcard" model="ir.actions.act_window">
        <field name="name">ID Card Printing</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_partner_idcard_form"/>
        <field name="domain">[]</field>
    </record>
</odoo>