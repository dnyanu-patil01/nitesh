<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- M2M Transfers Form View -->
	<record model="ir.ui.view" id="m2m_transfers_form_view">
		<field name="name">m2m.transfers.form</field>
		<field name="model">m2m.transfers</field>
		<field name="arch" type="xml">
			<form string="M2M Transfers" duplicate="0">
				<header>
					<button string="Confirm" name="button_confirm" type="object"
						class="oe_highlight"
						attrs="{'invisible': [('state', 'in', ('confirm', 'cancel'))]}" />
					<button name="action_cancel" attrs="{'invisible': [('state', 'in', ('confirm', 'cancel'))]}" string="Cancel" type="object"/>
					<button name="button_draft" states="cancel" string="Set to Draft" type="object" />
					<field name="state" widget="statusbar"/>
				</header>
				<sheet>
					<group>
						<group>
							<field name="current_product_id" attrs="{'readonly':[('state','in',('confirm','cancel'))]}" options="{'no_create': True, 'no_create_edit':True}" />
							<field name="quantity" attrs="{'readonly':[('state','in',('confirm','cancel'))]}"/>
							<field name="current_location_id" attrs="{'readonly':[('state','in',('confirm','cancel'))]}" options="{'no_create': True, 'no_create_edit':True}"/>
						</group>
						<group>
							<field name="new_product_id" attrs="{'readonly':[('state','in',('confirm','cancel'))]}" domain="[('id', '!=', current_product_id)]" options="{'no_create': True, 'no_create_edit':True}" />
							<field name="new_location_id" attrs="{'readonly':[('state','in',('confirm','cancel'))]}" options="{'no_create': True, 'no_create_edit':True}"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- M2M Transfers Tree View -->
	<record id="m2m_transfers_tree_view" model="ir.ui.view">
		<field name="name">m2m.transfers.tree</field>
		<field name="model">m2m.transfers</field>
		<field name="arch" type="xml">
			<tree string="M2M Transfers">
				<field name="name" />
				<field name="current_product_id" />
				<field name="quantity" />
				<field name="current_location_id" />
				<field name="new_product_id" />
				<field name="new_location_id" />
				<field name="state" />
			</tree>
		</field>
	</record>

	<!-- M2M Transfers Action -->
	<record id="m2m_transfers_action" model="ir.actions.act_window">
		<field name="name">M2M transfers</field>
		<field name="res_model">m2m.transfers</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- Menu item -->
	<menuitem id="menu_m2m_transfers"
		parent="stock.menu_stock_root" action="m2m_transfers_action" />
</odoo>
