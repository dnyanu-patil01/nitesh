<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      
      <record id="ir_cron_non_moving_stock_report" model="ir.cron">
          <field name="name">Send Non Moving Stock Report Mail</field>
          <field name="user_id" ref="base.user_root" />
          <field name="model_id" ref="stock.model_stock_move"/>
          <field name="state">code</field>
          <field name="code">model.cron_send_nonmoving_stock_report()</field>
          <field name="interval_number">1</field>
          <field name="interval_type">months</field>
          <field name="numbercall">-1</field>
          <field name="doall" eval="True"/>
        </record>

        <record id="mail_template_non_moving_stock" model="mail.template">
            <field name="name">Non Moving Stock Template</field>
            <field name="model_id" ref="stock.model_stock_move"/>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">${ctx['subject']}</field>
            <field name="body_html" type="html">
              <div style="margin: 16px 0px 16px 0px;">
                <p> Dear One, <br/>
                 Please Kindly Find The Attachment Of The Non Moving Stock Report For The Period ${ctx['start_date']} to ${ctx['end_date']}
                </p>
             
              </div>
            </field>
        </record>
    </data>
</odoo>
