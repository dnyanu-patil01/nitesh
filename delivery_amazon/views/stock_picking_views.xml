<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_for_amazon_shipment" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.delivery.amazon</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/header/button[last()]" position="after">
                <field name="delivery_type" invisible="1"/>
                <field name="is_shipment_purchased" invisible="1"/>
                <field name="is_get_rates" invisible="1"/>
                <field name="is_documents_generated" invisible="1"/>
<!--                <button name="amzn_get_rates" string="Get Rates" type="object" class="btn-primary" attrs="{'invisible':['|','|', ('delivery_type','!=','amazon_shipment'), ('is_shipment_purchased', '=', True), ('state', 'not in', ['assigned', 'confirmed'])]}"/>-->
                <button name="amzn_get_shipment_document" string="Get Label" type="object" class="btn-primary" attrs="{'invisible':['|', '|', '|', ('is_shipment_purchased', '=', False), ('is_documents_generated', '=', True),('delivery_type','!=','amazon_shipment'),('state', '!=', 'done')]}"/>
<!--                <button name="amzn_tracking_shipment" string="Track Shipment" type="object" class="btn-primary" attrs="{'invisible':['|', '|', ('is_documents_generated', '=', False),('delivery_type','!=','amazon_shipment'),('state', '!=', 'done')]}"/>-->
                <button name="amzn_cancel_shipment" string="Cancel Shipment" type="object" class="btn-primary" attrs="{'invisible':['|', '|', ('is_shipment_purchased', '=', False),('delivery_type','!=','amazon_shipment'),('state', '!=', 'done')]}"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="event_code" readonly="1"/>
                <field name="tracking_status" readonly="1"/>
                <field name="barcode" filename="barcode_file_name" readonly="1"/>
                <field name="barcode_file_name" invisible="1"/>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page string="Amazon Details" attrs="{'invisible':[('delivery_type','!=','amazon_shipment')]}">
                    <group>
                        <group>
<!--                            <field name="pickup_location" readonly="1"/>-->
                            <field name="package_unit" readonly="1"/>
                            <label for="shipping_weight"/>
                            <div class="o_row" name="Package Shipping Weight">
                                <field name="shipping_weight"/>
                                <span><field name="weight_uom_name"/></span>
                            </div>
                            <field name="amz_payment_method" attrs="{'readonly': [('state', '!=', 'done')]}" readonly="1"/>
                        </group>
                        <group>
                            <field name="channel_types" readonly="1" />
                            <field name="tracking_id" readonly="1" />
                            <field name="shipment_id" readonly="1" />
                            <field name="request_token" readonly="1" />
                        </group>

                    </group>
                </page>
                <page string="Amazon Service Matrix" attrs="{'invisible':['|',('delivery_type','!=','amazon_shipment'),('service_matrix_ids','=',False)]}">
                    <separator />
                    <field name="service_matrix_ids" readonly="1">
                        <tree>
                            <field name="service_id" invisible="1" />
<!--                            <field name="service_code" decoration-bf="1"/>-->
                            <field name="rate" decoration-bf="1"/>
                            <field name="carrier_id" />
                            <field name="carrier_name" />
                            <field name="billed_weight" />
                            <field name="est_pickup_startdate" />
                            <field name="est_pickup_enddate" />
                            <field name="est_delivery_startdate" />
                            <field name="est_delivery_enddate" />
                            <field name="picking_id" invisible="1"/>
                        </tree>
                    </field>
                    <group string="Recommended Services" attrs="{'invisible': [('state', 'not in', ['assigned', 'confirmed', 'done'])]}">
                        <group>
                            <field name="service_id" attrs="{'readonly':['|',('is_get_rates', '=', False), ('is_shipment_purchased', '=', True)]}"/>
<!--                            <button name="amzn_purchase_shipments" string="Purchase Shipment" type="object" class="btn-primary" attrs="{'invisible':['|',('is_get_rates', '=', False), ('is_shipment_purchased', '=', True)]}"/>-->
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record model="ir.ui.view" id="stock_picking_form_view_inherit_amazon">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='send_to_shipper']" position="attributes">
                <!-- <attribute name="groups">stock.group_stock_user,seller_management.group_sellers_management_user</attribute> -->
                <attribute name="attrs">{'invisible':['|','|','|','|','|',('carrier_tracking_ref','!=',False),('carrier_tracking_ref','!=',False),('delivery_type','in', ['fixed', 'base_on_rule','amazon_shipment']),('delivery_type','=',False),('state','not in',('done')),('picking_type_code', '=', 'incoming')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>


