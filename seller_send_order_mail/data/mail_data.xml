<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_seller_sale_report" model="ir.cron">
          <field name="name">Send Seller Sale Report Mail</field>
          <field name="user_id" ref="base.user_root" />
          <field name="model_id" ref="sale.model_sale_order"/>
          <field name="state">code</field>
          <field name="code">model.cron_send_seller_order_report()</field>
          <field name="interval_number">1</field>
          <field name="interval_type">days</field>
          <field name="numbercall">-1</field>
          <field name="doall" eval="True"/>
        </record>
    <data noupdate="1">
        <record id="mail_template_seller_sale_order" model="mail.template">
            <field name="name">Sellers Order Mail</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="email_from">${ctx['email_from']}</field>
            <field name="email_to">${ctx['email_to']}</field>
            <field name="subject">${ctx['subject']}</field>
            <field name="body_html" type="xml">
<table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td align="center">
<table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
<tbody>
    <!-- HEADER -->
    <tr>
        <td align="center" style="min-width:590px;">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width:590px;background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <tbody><tr><td valign="middle">
                    % set company = object.company_id or object.user_id.company_id or user.company_id
                    <span style="font-size:10px;">Dear</span><br></br>
                    <span style="font-size:20px;font-weight: bold;">
                        ${ctx['name']}
                    </span>
                </td>
                <td valign="middle" align="right">
                    <img src="/logo.png?company=${company.id}" style="padding:0px;margin: 0px; height: auto; width: 80px;" alt="${company.name}"></img>
                </td></tr>
                <tr><td colspan="2" style="text-align:center;">
                  <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:16px 0px 16px 0px;"></hr>
                </td></tr>
            </tbody></table>
        </td>
    </tr>
    <!-- CONTENT -->
    <tr>
        <td align="center" style="min-width: 590px;">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                <tr><td valign="top" style="font-size: 13px;">
                    <div style="text-align: center;"><strong>You have received ${ctx['order_count']} orders on ${ctx['order_date']}.Please proceed with the fulfilment.</strong></div>
                    <div style="text-align: center; margin: 16px 0px 16px 0px; font-size: 14px;">
                        <a href="${object.get_base_url()}/web/"
                            target="_blank"
                            style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            Process Orders
                        </a>
                    </div>
                    <div style="text-align: center;"><strong>If you have any questions, please do not hesitate to contact fulfilment team.</strong></div>
                </td></tr>
                <tr><td style="text-align:center;">
                  <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                </td></tr>
            </table>
        </td>
    </tr>
</tbody>
</table>
</td></tr>
</table>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>


    </data>
</odoo>
