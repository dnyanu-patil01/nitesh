<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_packaging_form_view_inherit" model="ir.ui.view">
        <field name="name">product.packaging.form.view.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="delivery.product_packaging_delivery_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="before">
                <label for="volumetric_weight"/>
                <div class="o_row" name="volumetric_weight">
                    <field name="volumetric_weight"/>
                    <span>kg</span>
                </div>
            </xpath>
            <xpath expr="//group[@name='delivery']/group[1]" position="replace">
                  <group>
                    <field name="package_carrier_type"/>
                    <label for="packaging_length"/>
                    <div class="o_row" name="packaging_length">
                      <field name="packaging_length"/>
                      <span>cm</span>
                    </div>
                    <label for="width"/>
                    <div class="o_row" name="width">
                      <field name="width"/>
                      <span>cm</span>
                    </div>
                    <label for="height"/>
                    <div class="o_row" name="height">
                      <field name="height"/>
                      <span>cm</span>
                    </div>
                  </group>
                </xpath>
                <!-- Added Chatter Log -->
                <xpath expr="//sheet" position="after">
                  <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                  </div>
                </xpath>
        </field>
    </record>
    <record id="choose_delivery_package_view_form_inherit" model="ir.ui.view">
      <field name="name">choose.delivery.package.view.form.inherit</field>
      <field name="model">choose.delivery.package</field>
      <field name="inherit_id" ref="delivery.choose_delivery_package_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[last()]" position="after">
          <label for="shipping_actual_weight" attrs="{'invisible': [('delivery_packaging_id', '=', False)]}"/>
          <div class="o_row" attrs="{'invisible': [('delivery_packaging_id', '=', False)]}" name="shipping_actual_weight">
              <field name="shipping_actual_weight" required="1"/>
              <field name="weight_uom_name"/>
          </div>
        </xpath>
      </field>
    </record>
</odoo>
