<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_packaging_form_view_inherit" model="ir.ui.view">
        <field name="name">product.packaging.form.view.inherit</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="delivery.product_packaging_delivery_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="before">
                <label for="volumetric_weight"/>
                <div class="o_row" name="volumetric_weight">
                    <field name="volumetric_weight"/>
                    <span>kg</span>
                </div>
            </xpath>
            <xpath expr="//div[@name='height']/span" position="replace">
                <span>cm</span>
            </xpath>
            <xpath expr="//div[@name='width']/span" position="replace">
                <span>cm</span>
            </xpath>
            <xpath expr="//div[@name='packaging_length']/span" position="replace">
                <span>cm</span>
            </xpath>
        </field>
    </record>
</odoo>
