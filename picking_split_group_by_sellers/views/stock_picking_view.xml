<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_seller_stock_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="seller_management.view_seller_stock_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='send_to_shipper']" position="after">
                <button string="Print" icon="fa-download" class="btn btn-info" name="generate_invoice_report" type="object" attrs="{'invisible':[('state','!=','done')]}"/>
            </xpath>
        </field>
    </record>
    <record id="view_seller_merge_picking_action" model="ir.actions.act_window">
        <field name="name">Group Delivery Order</field>
        <field name="res_model">stock.picking</field>
        <field name="domain">[('picking_type_code', '!=', 'incoming'),('merge_so_count','>=',2)]</field>
    </record>

    <record id="seller_merge_transfer_action_view_tree" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="view_seller_merge_picking_action"/>
        <field name="view_id" ref="seller_management.view_seller_stock_transfer_tree"/>
    </record>
    <record id="seller_merge_transfer_view_action_form" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="view_seller_merge_picking_action"/>
        <field name="view_id" ref="seller_management.view_seller_stock_picking_form"/>
    </record>
    
    <menuitem
        id="menu_seller_merged_delivery_order"
        name="Grouped Delivery Orders"
        action="view_seller_merge_picking_action"
        parent="seller_management.seller_root_menu"
        groups="seller_management.group_sellers_management_manager"
        sequence="45"/>

</odoo>
