<?xml version="1.0" encoding="utf-8"?>
<odoo>
        
    <record id="view_seller_form_seller_management" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="seller_management.view_seller_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fulfilment_type']" position="after">
                <field name="is_auto_generate_product_internal_reference" groups="seller_management.group_sellers_management_manager" />
            </xpath>
            <xpath expr="//field[@name='seller_invoice_sequence_id']" position="after">
                <field name="seller_product_sequence_id" attrs="{'required':[('is_auto_generate_product_internal_reference','=',True)],'invisible':[('is_auto_generate_product_internal_reference','=',False)]}" groups="seller_management.group_sellers_management_manager"/>
            </xpath>
        </field>
    </record>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">    
                <attribute name="duplicate">0</attribute>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="before">
                <field name="is_auto_generate_product_internal_reference" invisible="1" />
            </xpath> 
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="attrs">{'readonly':[('is_auto_generate_product_internal_reference','=',True)]}</attribute>
            </xpath>
        </field> 
    </record> 
    <record id="product_product_views_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="before">
                <field name="is_auto_generate_product_internal_reference" invisible="1" />
            </xpath> 
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="attrs">{'readonly':[('is_auto_generate_product_internal_reference','=',True)]}</attribute>
            </xpath>
            <xpath expr="//form" position="attributes">    
                <attribute name="duplicate">0</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_product_normal_views_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="before">
                <field name="is_auto_generate_product_internal_reference" invisible="1" />
            </xpath> 
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="attrs">{'readonly':[('is_auto_generate_product_internal_reference','=',True)]}</attribute>
            </xpath>
            <xpath expr="//form" position="attributes">    
                <attribute name="duplicate">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
