   <!-- Action For Shiprocket Courier -->
   <record id="action_shiprocket_courier" model="ir.actions.act_window">
      <field name="name">Courier</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">shiprocket.courier</field>
