      <field name="type">ir.actions.act_window</field>
      <field name="res_model">shiprocket.order.status</field>
      <field name="view_mode">tree,form</field>
   </record>
   <menuitem id="menu_shiprocket_order_status" name="Shiprocket Order Status" parent="menu_shiprocket_root" action="action_shiprocket_order_status" sequence="4" />
</odoo>