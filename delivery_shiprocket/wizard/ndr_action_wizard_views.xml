<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ndr_action_wizard_form" model="ir.ui.view">
        <field name="name">ndr.action.wizard.form</field>
        <field name="model">ndr.action.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="action"/>
                    </group>
                    <group colspan="2">
                        <field name="comments" placeholder="Add a comments..."/>
                    </group>
                </group>
                <footer>
                    <button name="action_ndr" type="object" string="Take Action" icon="fa-check" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>