<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="message_box_form" model="ir.ui.view">
        <field name="name">message.box.form</field>
        <field name="model">message.box</field>
        <field name="arch" type="xml">
            <form>
                <p class="text-center">
                    <field name="message" />
                </p>
                <footer>
                    <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>
</odoo>