<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_seller_tax_mapping_tree" model="ir.ui.view">
        <field name="name">seller.gst.mapping.tree</field>
        <field name="model">seller.gst.mapping</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="1" edit="1" import="0" sample="1">
                <field name="name" string="Tax Name" required="1"/>
                <field name="tax_ids" widget="many2many_tags" domain="[('type_tax_use','=','sale')]" required="1"/>
            </tree>
        </field>
    </record>

    <record id="seller_tax_view_action" model="ir.actions.act_window">
        <field name="name">Seller Tax Mapping</field>
        <field name="res_model">seller.gst.mapping</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_seller_tax_mapping_tree"/>
        <field name="help" type="html">
            <p>To Map Seller Tax</p>
        </field>
    </record>

    <menuitem
        id="menu_seller_tax"
        name="Seller Tax Mapping"
        action="seller_tax_view_action"
        parent="seller_management.menu_seller_config"
        groups="seller_management.group_sellers_management_manager"
        sequence="50"/>

    <record id="view_seller_product_change_request_form" model="ir.ui.view">
        <field name="name">product.change.request.form</field>
        <field name="model">product.change.request</field>
        <field name="inherit_id" ref="seller_product_management.view_seller_product_change_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="replace">
				<field name="seller_tax_id" options="{'no_create': True,'no_open':True}"/>
			</xpath>
        </field>
    </record>

    <record id="view_seller_product_template_form" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="seller_management.view_seller_product_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes_id']" position="replace">
				<field name="seller_tax_id" options="{'no_create': True,'no_open':True}"/>
			</xpath>
        </field>
    </record>
</odoo>